{
  "name": "@vibecode/bible",
  "version": "1.0.0",
  "description": "🕉️ Sacred Scripture of Conscious Programming - Telegram Bot Starter Kit with Meditative Development Practices",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bash scripts/dev-start.sh",
    "dev:bot-only": "bun run --watch index.ts",
    "dev:server": "bun run server.ts",
    "dev:fast": "NODE_ENV=development bun run index.ts",
    "build": "bun build index.ts --outdir ./dist --target node",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:full": "bun run build && bun run build:types",
    "start": "NODE_ENV=production node dist/index.js",
    "typecheck": "bun exec tsc --noEmit",
    "lint": "echo 'ESLint: TypeScript files skipped - using TypeScript compiler for type checking'",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "quality": "bun run typecheck && bun run lint && bun run format:check",
    "test": "vitest run --config tools/config/vitest.config.ts",
    "test:watch": "vitest --config tools/config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config tools/config/vitest.config.ts",
    "test:ui": "vitest --ui --config tools/config/vitest.config.ts",
    "generate:scene": "bun run scripts/generate-wizard-scene.ts",
    "tdd": "bash scripts/tdd-cycle.sh",
    "inngest:dev": "bash scripts/start-inngest.sh",
    "inngest:dev:manual": "npx inngest-cli dev --port 9288 --connect-gateway-port 9289",
    "inngest:check-ports": "lsof -i :9288 && lsof -i :9289 || echo 'Порты свободны'",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:restart": "pm2 restart all",
    "pm2:stop": "pm2 delete all",
    "dev:stop": "bash scripts/dev-stop.sh",
    "prepare": "husky",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "postinstall": "node -e \"try { require('fs').symlinkSync('./.env.example', './.env', 'file') } catch (e) {console.log('Please copy .env.example to .env manually')}\""
  },
  "keywords": [
    "telegram-bot",
    "starter-kit",
    "typescript",
    "telegraf",
    "meditation",
    "conscious-programming",
    "tdd",
    "test-driven-development",
    "clean-architecture",
    "wizard-scenes",
    "drizzle-orm",
    "neon-database",
    "postgres",
    "vitest",
    "bun",
    "inngest",
    "apollo-graphql",
    "open-source",
    "educational"
  ],
  "author": {
    "name": "VibeCode Bible Contributors",
    "url": "https://github.com/your-org/bible-vibecoder/graphs/contributors"
  },
  "license": "MIT",
  "homepage": "https://github.com/your-org/bible-vibecoder#readme",
  "bugs": {
    "url": "https://github.com/your-org/bible-vibecoder/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "files": [
    "dist",
    "src",
    ".env.example",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "tools/config"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourname/telegram-bot-starter-kit.git"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.0-beta.3",
    "@apollo/client": "^3.9.5",
    "@napi-rs/canvas": "^0.1.72",
    "ai": "^5.0.0-beta.3",
    "canvas": "^3.1.2",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.29.5",
    "inngest": "^3.39.2",
    "node-cache": "^5.1.2",
    "node-html-to-image": "^5.0.0",
    "openai": "^4.28.0",
    "pg": "^8.11.3",
    "sharp": "^0.34.2",
    "telegraf": "^4.16.3",
    "telegraf-i18n": "^6.6.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "^1.2.12",
    "@types/node": "^24.0.7",
    "@types/node-cache": "^4.2.5",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.1.3",
    "commitizen": "^4.3.1",
    "drizzle-kit": "^0.21.2",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "open": "^10.1.2",
    "prettier": "^3.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.3"
  }
}
