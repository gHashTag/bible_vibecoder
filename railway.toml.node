[build]
builder = "DOCKERFILE"
dockerfilePath = "./Dockerfile.node"

[deploy]
startCommand = "npm start"
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 3
healthcheckPath = "/"
healthcheckTimeout = 10
numReplicas = 1

[[services]]
name = "bible_vibecoder"
internalPort = 8080

[variables]
NODE_ENV = "production"
NODE_OPTIONS = "--max-old-space-size=512"
PORT = "8080"
